<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LOGIN</title>
    <link rel="icon" href="images/KARE_EDUSYNC_LOGO.png" type="image/png">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(rgb(255, 208, 208), rgb(143, 231, 251));
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
            /* Adjust the value as needed */
            padding-bottom: 100px;
            font-weight: 1000;
            font-family: 'Times New Roman', Times, serif;
            font-size: 50px;
            color: black;
        }

        h2 {
            text-align: center;
            margin-bottom: 50px;
        }

        form {
            width: 300px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid black;
            border-radius: 5px;
        }

        .form-groups {
            margin-bottom: 15px;
        }

        .form-groups label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
            color: #000000;
        }

        .form-groups input {
            width: 100%;
            padding: 8px;
            font-size: 16px;
            border: 1px solid black;
            border-radius: 3px;
        }

        .submit-btn {
            display: block;
            width: 100%;
            padding: 10px;
            background-color: blue;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .submit-btn:hover {
            background-color: blueviolet;
        }

        p {
            margin-top: 10px;
            font-size: small;
        }

        .sign-btn {
            padding: 5px;
            background-color: rgb(155, 178, 255);
            color: black;
            cursor: pointer;
            border: none;
            border-radius: 2px;
        }
    </style>

</head>

<body>



    <div class="form">
        <img src="images/KARE_EDUSYNC.png" alt="" height="150px" width="340px">


        <h2>LOGIN</h2>
        <form action="/login" method="post" onsubmit="emitSocketId(event)">
            <div class="form-groups">
                <label for="userPhoneNumber">PHONE NUMBER:</label>
                <input type="text" id="userPhoneNumber" name="username" placeholder="Enter your phone number" required
                    autocomplete="on">
            </div>
            <div class="form-groups">
                <label for="password">PASSWORD:</label>
                <input type="password" id="password" name="password" placeholder="Enter your password" required
                    autocomplete="off">
            </div>

            <button type="submit" class="submit-btn ">LOGIN</button>
            <p>Don't have an account? <a href="/signup">SignUp</a></p>
        </form>

    </div>

    <!-- ... Your existing HTML code ... -->

    <!-- Include Socket.io -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.0.1/socket.io.js"></script>

    <!-- Add the Socket ID Emitting Script -->
    <script>
        const socket = io();

        function emitSocketId(event) {
            event.preventDefault(); // Prevent form submission

            const phoneNumber = document.getElementById('userPhoneNumber').value;
            socket.emit('storeSocketId', phoneNumber); // Ensure it's emitted as a string

            // Continue with the form submission if needed
            event.target.submit();
        }
    </script>
</body>

</html>
